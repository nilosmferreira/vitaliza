// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String    @id
  primeiroNome String
  ultimoNome   String
  nomeUsuario  String    @unique
  senha        String
  email        String    @unique
  criadoEm     DateTime  @default(now())
  deletadoEm   DateTime?

  @@map("usuarios")
}
